easyblock = 'PythonPackage'

name = 'PySide6'
version = '6.5.2'

homepage = 'https://pypi.python.org/pypi/PySide6'
description = """PySide6 is the official Python module from the Qt for Python project,
    which provides access to the complete Qt 6.5+ framework."""

toolchain = {'name': 'GCCcore', 'version': '12.2.0'}

source_urls = ['https://download.qt.io/official_releases/QtForPython/%(namelower)s/%(name)s-%(version)s-src/']
sources = ['pyside-setup-everywhere-src-%(version)s.tar.xz']
checksums = ['90dbf1d14fcd41c98a7cbea44b8a4951e10d0b798e154749756e4946654d1ba8']

builddependencies = [
    ('binutils', '2.39'),
    ('CMake', '3.24.3'),
    ('Clang', '15.0.7'),
    ('Ninja', '1.11.1'),
    ('libxslt', '1.1.37'),
    ('patchelf', '0.18.0'),
    ('Qt6', '6.5.2'),
]

# Qt6 must not be loaded in "--standalone" mode
dependencies = [
    ('Python', '3.10.8'),
    ('double-conversion', '3.2.1'),
    ('GLib', '2.75.0'),
    ('PCRE2', '10.40'),
    ('libpng', '1.6.38'),
    ('HarfBuzz', '5.3.1'),
    ('graphite2', '1.3.14'),
    ('X11', '20221110'),
    ('fontconfig', '2.14.1'),
    ('DBus', '1.15.2'),
    ('at-spi2-atk', '2.38.0'),
    ('libevent', '2.1.12'),
    ('libGLU', '9.0.2'),
    ('libjpeg-turbo', '2.1.4'),
    ('NSS', '3.85'),
    ('snappy', '1.1.9'),
    ('JasPer', '4.0.0'),
    ('bzip2', '1.0.8'),
    ('OpenSSL', '1.1', '', SYSTEM),
    ('ICU', '72.1'),
]


use_pip = False
sanity_pip_check = True
download_dep_fail = True

prebuildopts = 'export CLANG_INSTALL_DIR=$EBROOTCLANG && '
buildopts = '--ignore-git  --standalone --parallel=%(parallel)s'

preinstallopts = prebuildopts
installopts = buildopts

sanity_check_paths = {
    'files': ['lib/python%(pyshortver)s/site-packages/PySide6/Qt/plugins/designer/libPySidePlugin.so'],
    'dirs': ['bin/'],
}

options = {'modulename': 'PySide6'}

moduleclass = 'devel'
