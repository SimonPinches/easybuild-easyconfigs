easyblock = 'PythonPackage'

name = 'PySide6'
version = '6.5.0'

homepage = 'https://pypi.python.org/pypi/PySide6'
description = """PySide6 is the official Python module from the Qt for Python project,
    which provides access to the complete Qt 6.5+ framework."""

toolchain = {'name': 'GCCcore', 'version': '12.2.0'}

source_urls = ['https://download.qt.io/official_releases/QtForPython/%(namelower)s/%(name)s-%(version)s-src/']
sources = ['pyside-setup-everywhere-src-%(version)s.tar.xz']
checksums = ['6ef53b29127267e381917e6f9399ce760edc0644cd5831988b1de72c9d583ab4']

builddependencies = [
    ('binutils', '2.39'),
    ('CMake', '3.24.3'),
    ('Clang', '15.0.7'),
    ('Ninja', '1.11.1'),
    ('libxslt', '1.1.37'),
    ('Qt6', '6.5.0'),
    ('patchelf', '0.18.0'),
]

dependencies = [
    ('Python', '3.10.8'),
]

use_pip = False
sanity_pip_check = True
download_dep_fail = True

preconfigopts = 'export CLANG_INSTALL_DIR=$EBROOTCLANG && '

prebuildopts = 'export CLANG_INSTALL_DIR=$EBROOTCLANG && '
_opts = ' --skip-docs --ignore-git --standalone --parallel=%(parallel)s'
# _opts += ' --qmake=${EBROOTQT6}/bin/qmake'
buildcmd = 'build ' + _opts

preinstallopts = 'export CLANG_INSTALL_DIR=$EBROOTCLANG && '
install_target = 'install ' + _opts

options = {'modulename': 'PySide6'}

moduleclass = 'devel'
