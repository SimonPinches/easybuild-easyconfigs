easyblock = 'CMakePythonPackage'

name = 'PyHDC'
version = '0.21.0'

homepage = 'https://bitbucket.org/compass-tokamak/hdc/wiki/Home'
description = """Hierarchical Dynamic Containers"""

toolchain = {'name': 'intel', 'version': '2022a'}
toolchainopts = {'pic': True}

source_urls = ['https://bitbucket.org/compass-tokamak/hdc/get/']
sources = ['v%(version)s.tar.gz']
checksums = ['c2c2156f3e39a9530cecdf04b50515c6961497242d9b9289d72c413936fafe1b']

builddependencies = [
    ('CMake', '3.23.1'),
]

dependencies = [
    ('Python', '3.10.4'),
    ('SciPy-bundle', '2022.05'),
    ('HDC', version),
]

separate_build_dir = True

use_pip = True
download_dep_fail = True
sanity_pip_check = True

configopts  = '-DBOOST_ROOT=${EBROOTBOOST} -DENABLE_HDF5=OFF '
configopts += '-DBUILD_EXAMPLES=OFF -DBUILD_TESTS=OFF'

install_cmd = 'cd python && pip install . --prefix=%(installdir)s '
install_cmd += '--no-deps  --ignore-installed  --no-index'

#preinstallopts = 'cd python && '
#install_cmd = 'pip install . --prefix=%(installdir)s '

exts_defaultclass = 'PythonPackage'

exts_default_options = {
    'source_urls': [PYPI_SOURCE],
    'use_pip': True,
    'download_dep_fail': True,
    'sanity_pip_check': True,
}

exts_list = [
    ('click', '8.1.3', {
        'checksums': ['7682dc8afb30297001674575ea00d1814d808d6a36af415a82bd481d37ba7b8e'],
    }),
]

sanity_check_paths = {
    'files': ['bin/hdc-binder'],
    'dirs':  ['bin', 'lib/python%(pyshortver)s/site-packages']
}

moduleclass = 'data'
