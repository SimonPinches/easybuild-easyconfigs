name = 'PGI'
version = '20.4'

homepage = 'http://www.pgroup.com/'
description = "C, C++ and Fortran compilers from The Portland Group - PGI"

toolchain = {'name': 'dummy', 'version': ''}

sources = ['pgilinux-20%(version_major)s-%(version_major)s%(version_minor)s-x86-64.tar.gz']
checksums = ['f3ecc2104b304cd5c8b20e3ffdb5da88f2b5f7cc148e8daf00561928a5cbbc2e']

local_gccver = '9.3.0'
local_binutilsver = '2.34'
versionsuffix = '-GCCcore-%s' % local_gccver

dependencies = [
    ('GCCcore', local_gccver),
    ('binutils', local_binutilsver, '', ('GCCcore', local_gccver)),
    ('numactl', '2.0.13', '', ('GCCcore', local_gccver)),
]

modextravars = {
    'PGI': '%(installdir)s',
    'PGROUPD_LICENSE_FILE': HOME + '/licenses/pgi/license.dat'
}

moduleclass = 'compiler'
