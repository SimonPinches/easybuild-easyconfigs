easyblock = 'CMakeMake'

name = 'libspatialindex'
version = '1.9.3'

homepage = 'https://libspatialindex.github.io'

description = """
 C++ implementation of R*-tree, an MVR-tree and a TPR-tree with C API
"""

toolchain = {'name': 'GCCcore', 'version': '10.2.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/%(name)s/%(name)s/releases/download/%(version)s']
sources = ['spatialindex-src-%(version)s.tar.gz']
checksums = ['47d8779e32477b330e46b62fb7e62cb812caee5d8e684c35cb635a42a749f3fc']

builddependencies = [
    ('binutils', '2.35'),
]

sanity_check_paths = {
    'files': ['lib/libspatialindex.%s' % SHLIB_EXT, 'lib/libspatialindex_c.%s' % SHLIB_EXT],
    'dirs': ['include/spatialindex', 'lib'],
}

moduleclass = 'lib'
