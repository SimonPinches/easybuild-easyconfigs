easyblock = 'CMakeMake'

name = 'TTK'
version = '0.9.8.9'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://topology-tool-kit.github.io"
description = "The Topology ToolKit (TTK) is an open-source library and software collection for topological data analysis in scientific visualization."

toolchain = {'name': 'foss', 'version': '2018a'}
toolchainopts = {'pic': True, 'usempi': True}

source_urls = ['https://github.com/topology-tool-kit/%(namelower)s/archive']
sources = ["%(version)s.tar.gz"]
checksums = ['d0cd86bbea9e761b0a9acb3ce871e5faaec17ee86c608fe6f472aa21399c31f5']

dependencies = [
    ('Boost', '1.66.0'),
    ('Python', '3.6.4'),
    ('VTK', '8.2.0', versionsuffix),
    ('PyQt5', '5.9.2', versionsuffix),
    ('Eigen', '3.3.4', '', True),
    ('zfp', '0.5.5'),
]

builddependencies = [('CMake', '3.12.1')]

separate_build_dir = True

configopts = '-DCMAKE_BUILD_TYPE=Release '
configopts += '-DTTK_ENABLE_EIGEN=ON '
configopts += '-DEigen3_DIR=$EBROOTEIGEN/share/eigen3/cmake '
configopts += '-DTTK_BUILD_PARAVIEW_PLUGINS=OFF '
configopts += '-DTTK_BUILD_VTK_PYTHON_MODULE=ON '
configopts += '-DTTK_BUILD_VTK_WRAPPERS=ON '
configopts += '-DTTK_ENABLE_OPENMP=ON '

modextrapaths = {'PYTHONPATH': ['lib/python%(pyshortver)s/site-packages']}

sanity_check_paths = {
    'files': ['bin/ttkReebSpaceCmd'],
    'dirs': ['bin', 'lib/python%(pyshortver)s', 'share'],
}

moduleclass = 'vis'
