easyblock = 'CMakeMake'

name = 'HDC'
version = '0.21.0'

homepage = 'https://bitbucket.org/compass-tokamak/hdc/wiki/Home'
description = """Hierarchical Dynamic Containers"""

toolchain = {'name': 'GCCcore', 'version': '11.3.0'}
toolchainopts = {'pic': True}

source_urls = ['https://bitbucket.org/compass-tokamak/hdc/get/']
sources = ['v%(version)s.tar.gz']
checksums = ['c2c2156f3e39a9530cecdf04b50515c6961497242d9b9289d72c413936fafe1b']

builddependencies = [
    ('binutils', '2.38'),
    ('CMake', '3.23.1'),
    ('Maven', '3.6.3', '', True),
]

dependencies = [
    ('Boost', '1.79.0', '-no_mpi'),
    ('MDBM', '4.13.0'),
    ('Redis', '7.0.4'),
    ('libs3', '4.1-g287e4be'),
    ('flatbuffers', '2.0.0'),
]

separate_build_dir = True

configopts = '-DBOOST_ROOT=${EBROOTBOOST} '
configopts += '-DBUILD_EXAMPLES=OFF -DBUILD_TESTS=OFF '
configopts += '-DENABLE_JAVA=OFF -DENABLE_HDF5=OFF '
configopts += '-DINSTALL_JAVA_DEPENDENCIES=OFF '
configopts += '-DENABLE_FORTRAN=FALSE '

modextrapaths = {
    'CPATH': 'include/hdc',
}

sanity_check_paths = {
    'files': ['include/hdc/hdc_c.h',
              'include/hdc/hdc_errors.hpp',
              'include/hdc/hdc_global.hpp',
              'include/hdc/hdc_helpers.h',
              'include/hdc/hdc.hpp',
              'include/hdc/hdc_map.h',
              'include/hdc/hdc_storage.h',
              'include/hdc/hdc_types.h',
              'include/hdc/hdc_utils.h',
              'lib/libchdc.%s' % SHLIB_EXT,
              'lib/libhdc.%s' % SHLIB_EXT,
              'lib/pkgconfig/chdc.pc',
              'lib/pkgconfig/hdc.pc'],
    'dirs':  ['include/hdc/andres',
              'include/hdc/json',
              'include/hdc/Pluma',
              'lib/pkgconfig',
              'lib/hdc/']
}

moduleclass = 'data'
