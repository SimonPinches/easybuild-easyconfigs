easyblock = 'CMakeMake'

name = 'HDC'
version = '0.9.1'

homepage = 'https://bitbucket.org/compass-tokamak/hdc/wiki/Home'
description = """Hierarchical Dynamic Containers"""

toolchain = {'name': 'foss', 'version': '2018a'}
toolchainopts = {'pic': True}

source_urls = ['https://bitbucket.org/compass-tokamak/hdc/get/']
sources = ['v%(version)s.tar.gz']
checksums = ['efef0951d3c27d668257279396392f92b153d99522133157d9897293e1798499']

builddependencies = [
    ('CMake', '3.12.1'),
]

dependencies = [
    ('Boost', '1.66.0'),
    ('MDBM', '4.13.0'),
    ('HDF5', '1.10.1'),
]

separate_build_dir = True

configopts = '-DBOOST_ROOT=${EBROOTBOOST} '

sanity_check_paths = {
    'files': ['bin/hdc_example_c',
              'bin/hdc_example_cpo',
              'bin/hdc_example_cpp',
              'bin/hdc_example_fortran',
              'bin/hdc_example_interprocess',
              'bin/hdc_test',
              'bin/hdc_test_c',
              'bin/hdc_test_serialization',
              'include/hdc/hdc_c.h',
              'include/hdc/hdc_errors.hpp',
              'include/hdc/hdc_fortran.mod',
              'include/hdc/hdc_global.hpp',
              'include/hdc/hdc_hdf5.h',
              'include/hdc/hdc_helpers.h',
              'include/hdc/hdc.hpp',
              'include/hdc/hdc_map.h',
              'include/hdc/hdc_storage.h',
              'include/hdc/hdc_types.h',
              'include/hdc/hdc_utils.h',
              'lib/libchdc.%s' % SHLIB_EXT,
              'lib/libfhdc.%s' % SHLIB_EXT,
              'lib/libhdc_fortran_module.%s' % SHLIB_EXT,
              'lib/pkgconfig/chdc.pc',
              'lib/pkgconfig/fhdc.pc',
              'lib/pkgconfig/hdc.pc'],
    'dirs':  ['bin',
              'include/hdc/andres',
              'include/hdc/json',
              'include/hdc/Pluma',
              'lib/pkgconfig',
              'lib/hdc/']
}

moduleclass = 'data'
