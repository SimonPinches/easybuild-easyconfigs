easyblock = 'PythonPackage'

name = 'Shiboken2'
version = '5.14.1'
versionsuffix = '-Python-%(pyver)s'

homepage = "https://pypi.python.org/pypi/PySide2/"
description = """PySide2 is the official Python module from the Qt for Python project,
    which provides access to the complete Qt 5.12+ framework."""

toolchain = {'name': 'GCCcore', 'version': '9.3.0'}

source_urls = ['https://download.qt.io/official_releases/QtForPython/%(namelower)s']
sources = ['%(namelower)s-%(version)s-%(version)s-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl']
checksums = ['b046f810f2409b734621972ee6bff1eac76e87f08ab0638010d99a1b79f72842']

use_pip = True
unpack_sources = False
download_dep_fail = True

dependencies = [
    ('Python', '3.8.2'),
    ('Qt5', version),
]

options = {'modulename': 'shiboken2'}

sanity_check_paths = {
    'files': [],
    'dirs': ['lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'devel'
